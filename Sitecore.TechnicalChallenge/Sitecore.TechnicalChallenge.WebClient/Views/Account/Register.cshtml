@model Sitecore.TechnicalChallenge.WebClient.Models.RegistrationModel

@{
    Layout = "";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Register | Single Sign On</title>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
        <div class="login-box">
            <div class="form-group">
                <h2>Register</h2>
                <div style="color: Red">
                    @Html.ValidationSummary()
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    @Html.LabelFor(m => m.Username) *
                </div>
                <div class="col-md-7">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    @*@Html.ValidationMessageFor(m => m.Username, "",new {@style="color:red;"})*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-5">
                    @Html.LabelFor(m => m.Password) *
                </div>
                <div class="col-md-7">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                    @*@Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red;" })*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    @Html.LabelFor(m => m.ConfirmPassword) *
                </div>
                <div class="col-md-7">
                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password" })
                    @*@Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red;" })*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    @Html.LabelFor(m => m.FirstName) *
                </div>
                <div class="col-md-7">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    @*@Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red;" })*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-5">
                    @Html.LabelFor(m => m.LastName) *
                </div>
                <div class="col-md-7">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    @*@Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red;" })*@
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
            <a href="@Url.Action("Login")">Back to Login</a>
        </div>
        }

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
