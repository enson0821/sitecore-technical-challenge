@model Sitecore.TechnicalChallenge.WebClient.Models.LoginModel
@{
    Layout = "";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>Login | Single Sign On</title>
</head>
<body>
<div class="container">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div class="login-box">
            <div class="form-group">
                <h2>Login</h2>
                <div style="color: Red">
                    @Html.ValidationSummary()
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Username) *
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Username, new {@class = "form-control"})
                    @*@Html.ValidationMessageFor(m => m.Username, "",new {@style="color:red;"})*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Password) *
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                    @*@Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red;" })*@
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary"/>
            </div>
            <a href="@Url.Action("Register")">Register an account</a>
        </div>
    }

</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</body>
</html>